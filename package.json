{
	"name": "nestjs-template",
	"description": "The backend api template with nestjs",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "nest start --watch",
		"build": "nest build",
		"start": "node --enable-source-maps dist/main.js",
		"lint": "TIMING=1 eslint \"{src,test}/**/*.ts\" --fix",
		"format": "prettier --write --cache .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
		"test:e2e": "vitest run --config ./vitest.config.e2e.ts",
		"typecheck": "tsc -p tsconfig.eslint.json"
	},
	"imports": {
		"#app/mongoose": "./dist/lib/mongo/index.js",
		"#app/mongoose/*": "./dist/lib/mongo/*.js",
		"#zod": "./dist/lib/zod/index.js"
	},
	"dependencies": {
		"@imranbarbhuiya/duration": "^5.1.8",
		"@nestjs/common": "^11.1.0",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.0",
		"@nestjs/mongoose": "^11.0.3",
		"@nestjs/platform-fastify": "^11.1.0",
		"@nestjs/serve-static": "^5.0.3",
		"@nestjs/swagger": "^11.2.0",
		"@swc/helpers": "^0.5.17",
		"dotenv": "^16.5.0",
		"helmet": "^8.1.0",
		"mongoose": "^8.14.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"tslib": "^2.8.1",
		"undici": "^7.8.0",
		"zod": "^3.24.4"
	},
	"devDependencies": {
		"@darraghor/eslint-plugin-nestjs-typed": "^6.4.14",
		"@nestjs/cli": "^11.0.7",
		"@nestjs/schematics": "^11.0.5",
		"@nestjs/testing": "^11.1.0",
		"@swc/cli": "^0.7.4",
		"@swc/core": "^1.11.24",
		"@types/node": "^22.15.14",
		"@vitest/coverage-v8": "^3.1.3",
		"eslint": "^9.26.0",
		"eslint-config-mahir": "^1.0.7",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"unplugin-swc": "^1.5.2",
		"vitest": "^3.1.3"
	},
	"packageManager": "yarn@4.9.1"
}
