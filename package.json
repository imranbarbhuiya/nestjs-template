{
	"name": "nestjs-template",
	"description": "The backend api template with nestjs",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "nest start --watch",
		"build": "nest build",
		"start": "node --enable-source-maps dist/main.js",
		"lint": "TIMING=1 eslint \"{src,test}/**/*.ts\" --fix",
		"format": "prettier --write --cache .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
		"test:e2e": "vitest run --config ./vitest.config.e2e.ts",
		"typecheck": "tsc -p tsconfig.eslint.json"
	},
	"imports": {
		"#app/mongoose": "./dist/lib/mongo/index.js",
		"#app/mongoose/*": "./dist/lib/mongo/*.js",
		"#zod": "./dist/lib/zod/index.js"
	},
	"dependencies": {
		"@imranbarbhuiya/duration": "^5.1.8",
		"@nestjs/common": "^11.0.10",
		"@nestjs/config": "^4.0.0",
		"@nestjs/core": "^11.0.10",
		"@nestjs/mongoose": "^11.0.1",
		"@nestjs/platform-fastify": "^11.0.10",
		"@nestjs/serve-static": "^5.0.3",
		"@nestjs/swagger": "^11.0.5",
		"@swc/helpers": "^0.5.15",
		"dotenv": "^16.4.7",
		"helmet": "^8.0.0",
		"mongoose": "^8.10.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"tslib": "^2.8.1",
		"undici": "^7.3.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@darraghor/eslint-plugin-nestjs-typed": "^6.2.4",
		"@nestjs/cli": "^11.0.4",
		"@nestjs/schematics": "^11.0.1",
		"@nestjs/testing": "^11.0.10",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.10.18",
		"@types/node": "^22.13.5",
		"@vitest/coverage-v8": "^3.0.7",
		"eslint": "^9.21.0",
		"eslint-config-mahir": "^1.0.7",
		"prettier": "^3.5.2",
		"typescript": "^5.7.3",
		"unplugin-swc": "^1.5.1",
		"vitest": "^3.0.7"
	},
	"packageManager": "yarn@4.6.0"
}
